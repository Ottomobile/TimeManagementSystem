@model IEnumerable<TimeManagementSystem.Models.TimeRecord>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationBreak)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DurationWork)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeBreakEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeBreakStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeWorkEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeWorkStart)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationBreak)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecordDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeBreakEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeBreakStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeWorkEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeWorkStart)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
