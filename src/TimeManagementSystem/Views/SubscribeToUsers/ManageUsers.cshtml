@model IEnumerable<TimeManagementSystem.Models.SubscribeToUser>

@{
    ViewData["Title"] = "Manage Users";
}

<h2>Manage Users</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    <!-- Users managed by the current user -->
                    Users Managed
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <!-- Users managed by the current user -->
                        @Html.DisplayFor(modelItem => item.CurrentUser)
                    </td>
                    <td>
                        <a asp-action="ViewTimeRecords" asp-route-managedUser=@item.CurrentUser>Time Records</a> | 
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
