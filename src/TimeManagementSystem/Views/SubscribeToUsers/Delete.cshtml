@model TimeManagementSystem.Models.SubscribeToUser

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this connection?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        @{
            string currentUser = this.User.Identity.Name;
            if (currentUser == Model.ManagingUser)
            {
                <dt>
                    Current User
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ManagingUser)
                </dd>
                <dt>
                    @*User that is managed*@
                    User Managed
                </dt>
                <dd>
                    @*User that is managed*@
                    @Html.DisplayFor(model => model.CurrentUser)
                </dd>
            }
            else
            {
                <dt>
                    Current User
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CurrentUser)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ManagingUser)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ManagingUser)
                </dd>
            }
        }
    </dl>

    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
